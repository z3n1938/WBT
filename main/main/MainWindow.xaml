<Window x:Class="WBT.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Windows Basic Tools" Height="450" Width="800" Background="#1C1C2E">
    <Grid>
        <TextBlock Text="WINDOWS BASIC TOOLS" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" FontSize="28" FontWeight="Bold" Foreground="#FFFFFF"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Height="356" Margin="0,52,0,0">
            <StackPanel Margin="0,0,20,0">
                <Button x:Name="BtnWingetUpgradeAll" Content="WINGET UPGRADE -ALL" Width="160" Height="40" Margin="0,5" Background="#6A0DAD" Foreground="#FFD700" FontWeight="Bold"/>
                <Button x:Name="BtnWindowsUpdate" Content="WINDOWS UPDATE" Width="160" Height="40" Margin="0,5" Background="#6A0DAD" Foreground="#FFD700" FontWeight="Bold"/>
                <Button x:Name="BtnTempClean" Content="TEMPCLEAN" Width="160" Height="40" Margin="0,5" Background="#6A0DAD" Foreground="#FFD700" FontWeight="Bold"/>
                <Button x:Name="BtnFlushDns" Content="FLUSH DNS" Width="160" Height="40" Margin="0,5" Background="#6A0DAD" Foreground="#FFD700" FontWeight="Bold"/>
                <Button x:Name="BtnBackgroundApps" Content="BACKGROUND APPS" Width="160" Height="40" Margin="0,5" Background="#6A0DAD" Foreground="#FFD700" FontWeight="Bold"/>
                <Button x:Name="BtnSfcScan" Content="SFC SCAN" Width="160" Height="40" Margin="0,5" Background="#6A0DAD" Foreground="#FFD700" FontWeight="Bold"/>
                <Button x:Name="BtnDism" Content="DSIM" Width="160" Height="40" Margin="0,5" Background="#6A0DAD" Foreground="#FFD700" FontWeight="Bold"/>
            </StackPanel>
            <StackPanel Margin="0,0,20,0">
                <Button x:Name="BtnCleanMgr" Content="CLEANMGR" Width="160" Height="40" Margin="0,5" Background="#6A0DAD" Foreground="#FFD700" FontWeight="Bold"/>
                <Button x:Name="BtnEventViewer" Content="EVENTVWR" Width="160" Height="40" Margin="0,5" Background="#6A0DAD" Foreground="#FFD700" FontWeight="Bold"/>
                <Button x:Name="BtnTaskManager" Content="TASKMGR" Width="160" Height="40" Margin="0,5" Background="#6A0DAD" Foreground="#FFD700" FontWeight="Bold"/>
                <Button x:Name="BtnResourceMonitor" Content="RESMON" Width="160" Height="40" Margin="0,5" Background="#6A0DAD" Foreground="#FFD700" FontWeight="Bold"/>
                <Button x:Name="BtnSystemInfo" Content="MSINFO32" Width="160" Height="40" Margin="0,5" Background="#6A0DAD" Foreground="#FFD700" FontWeight="Bold"/>
                <Button x:Name="BtnDefrag" Content="X DFRGUI X" Width="160" Height="40" Margin="0,5" Background="#6A0DAD" Foreground="#FFD700" FontWeight="Bold"/>
                <Button x:Name="BtnRegedit" Content="REGEDIT" Width="160" Height="40" Margin="0,5" Background="#6A0DAD" Foreground="#FFD700" FontWeight="Bold"/>
            </StackPanel>
            <StackPanel>
                <Button x:Name="BtnCmd" Content="CMD" Width="160" Height="40" Margin="0,5" Background="#6A0DAD" Foreground="#FFD700" FontWeight="Bold"/>
                <Button x:Name="BtnPowerShell" Content="POWERSHELL" Width="160" Height="40" Margin="0,5" Background="#6A0DAD" Foreground="#FFD700" FontWeight="Bold"/>
                <Button x:Name="BtnPowerShellISE" Content="POWERSHELL ISE" Width="160" Height="40" Margin="0,5" Background="#6A0DAD" Foreground="#FFD700" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
        <TextBlock Text="Thanks for using it. Made it z3n1938" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" FontSize="12" Foreground="#CCCCCC"/>
    </Grid>
</Window>